{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./",
    "outDir": "./dist",

    /* Module + Environment */
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "lib": ["esnext"],
    "types": ["node"],

    /* ESM Support */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "moduleDetection": "force",

    /* Outputs */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Performance */
    "skipLibCheck": true
  },
  "include": ["src", "server.ts", "services", "interfaces", "controllers"],
  "exclude": ["node_modules", "dist"]
}
